<h2>Create a Post</h2>
<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_tag posts_path, method: "post" do %>
    <div class="field<%= '_with_errors' if @post.errors[:title].any? %>">
    Title: <%= text_field_tag "title", @post.title %>
    </div>
    <div class="field<%= '_with_errors' if @post.errors[:content].any? %>">
    Content: <%= text_area_tag "content", @post.content %>
    </div>
    <div class="field<%= '_with_errors' if @post.errors[:category].any? %>">
    Category:  <%= text_field_tag "category", @post.category %>
    </div>
  <%= submit_tag "Create Post" %>
<% end %>